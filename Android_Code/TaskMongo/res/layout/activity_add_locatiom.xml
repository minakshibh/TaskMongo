<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
>
<RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="Back"
            android:drawableLeft="@drawable/back_icon"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Add Locations"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

       <TextView
            android:id="@+id/btnAdd"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="Add"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>
        <LinearLayout
            android:id="@+id/lay_enterdesaddress"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:singleLine="true"
                android:textSize="14sp"
                android:layout_height="match_parent"
                android:id="@+id/autotext_address"
                android:hint="ENTER ORIGIN"
                android:paddingLeft="10dp"
                android:background="@null"
                />

            <ImageView
                android:id="@+id/imag_cross"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="match_parent"
                android:src="@drawable/cancel_icon"
              
                />
            <TextView
                android:id="@+id/txt_go"
                android:layout_width="wrap_content"
                android:padding="7dp"
                android:text=" Save "
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:background="@color/blue"
               
                />
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/lay_map"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp">
    
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="fill_parent"
            android:layout_marginLeft="-8dp"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"></View>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">
            <ImageView
                android:id="@+id/mapPin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/mapmarker" />
        </LinearLayout>



    </RelativeLayout>




</LinearLayout>
